<Application x:Class="WFix.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources RequestedTheme="Dark"/>
                <ui:XamlControlsResources/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Цветовая палитра -->
            <Color x:Key="AccentColor">#FF2D7FF9</Color>
            <Color x:Key="SuccessColor">#FF2ECC71</Color>
            <Color x:Key="WarningColor">#FFFFA500</Color>
            <Color x:Key="ErrorColor">#FFFF4757</Color>
            <Color x:Key="BgPrimary">#FF1A1A2E</Color>
            <Color x:Key="BgSecondary">#FF16213E</Color>
            <Color x:Key="BgPanel">#FF0F3460</Color>
            <Color x:Key="TextPrimary">#FFE0E0E0</Color>
            <Color x:Key="TextSecondary">#FF9E9E9E</Color>

            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
            <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
            <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
            <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
            <SolidColorBrush x:Key="BgPrimaryBrush" Color="{StaticResource BgPrimary}"/>
            <SolidColorBrush x:Key="BgSecondaryBrush" Color="{StaticResource BgSecondary}"/>
            <SolidColorBrush x:Key="BgPanelBrush" Color="{StaticResource BgPanel}"/>
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>

            <!-- Стиль карточки-панели -->
            <Style x:Key="CardPanel" TargetType="Border">
                <Setter Property="Background" Value="#1E1E2E"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Padding" Value="14"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="18" ShadowDepth="2" Opacity="0.4" Color="#000011"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Кнопка фикса -->
            <Style x:Key="FixButton" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                <Setter Property="Background" Value="#1A2A4A"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="#2D7FF9"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="14,8"/>
                <Setter Property="Margin" Value="0,3"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

            <!-- Метки статуса -->
            <Style x:Key="StatusBadge" TargetType="Border">
                <Setter Property="CornerRadius" Value="4"/>
                <Setter Property="Padding" Value="6,2"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
